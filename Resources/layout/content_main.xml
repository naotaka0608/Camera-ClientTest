<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

    <TextView
        android:text="@string/textview_ipaddress"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_ipaddress" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_ipaddress"
        android:hint="@string/edittext_hint_ipaddress"
        android:text="@string/edittext_text_ipaddress"
        android:inputType="none|text"
        android:layout_marginTop="0.0dp"/>
    <TextView
        android:text="@string/textview_port"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_port" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_port"
        android:inputType="none|number"
        android:hint="@string/edittext_hint_port"
        android:text="@string/edittext_text_port"/>
    <Button
        android:text="@string/button_tcpopen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_TcpOpen"/>
    <TextView
        android:text="@string/textview_Send_Image"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Send_Image" />
    <Button
        android:text="@string/button_Send_On_Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:id="@+id/button_Send_On_Image"/>
    <TextView
        android:text="@string/textView_Detect"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Detect" />
    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton_Detect" />
    <TextView
        android:text="@string/textview_AllTime"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_AllTime" />
    <ImageView
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="match_parent"
        android:layout_height="243.1dp"
        android:id="@+id/imageView_Main"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:contentDescription="@string/imageView_Main"
        android:scrollbars="vertical"
        android:layout_marginBottom="118.0dp" />
</LinearLayout>
